import java.util.*;

public class AlphaBeta {
      public static void main(String []args){
        Scanner sc = new Scanner(System.in);
        String s = sc.nextLine();
        int a = s.charAt(0);
        if(a>=97 && a<=122){
            a = a - 32;
        }
        
        System.out.println(s.replaceFirst(s.charAt(0)+"",(char)a+""));
     }
}