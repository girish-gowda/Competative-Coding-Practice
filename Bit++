import java.util.*;

public class AlphaBeta {
      public static void main(String []args){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int count = 0;
        for(int i=0; i<n; i++){
            String temp = sc.next();
            if(temp.contains("++")){
                count++;
            }else if(temp.contains("--")){
                count--;
            }
        }
        System.out.println(count);
     }
}