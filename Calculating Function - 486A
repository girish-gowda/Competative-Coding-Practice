import java.util.*;

public class AlphaBeta{

     public static void main(String[] args){
		java.util.Scanner sc = new java.util.Scanner(System.in);
        long n = sc.nextLong();
        if(n%2==0){
            System.out.println(n/2);
        }else{
            System.out.println(-1*((n+1)/2));
        }
     }
}